<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/checkout.css">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Checkout - SEA Movie</title>
</head>

<body>
    <!-- ==========Header-Section========== -->
    <form action="/checkout.ejs" method="POST">

        <header class="header-section">
            <div class="px-3 py-2">
                <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-between">
                        <a href="/"
                            class="d-flex align-items-center my-2 my-lg-0 me-lg-4 text-white text-decoration-none">
                            <img src="images/logo-sea-movie.png" id="logo-sea-movie" />
                        </a>

                        <ul class="nav col-12 col-lg-auto my-2 justify-content-center align-items-center text-small">
                            <li>
                                <a href="/" class="nav-link text-white">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="/" class="nav-link text-white">
                                    movies
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link text-white">
                                    Your Ticket
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link text-white">
                                    About
                                </a>
                            </li>
                            <li>
                                <p style="visibility: hidden;">
                                    <%= secondHiddenLi %>
                                </p>
                            </li>
                        </ul>

                        <!-- Sign up and Login Button -->
                        <%- buttonOrProfile %>
                    </div>
                </div>
            </div>
        </header>
        <!-- ==========Header-Section========== -->

        <!-- =============Jumbotron============= -->
        <jumbotron>
            <div class="jumbotron-img">
                <div class="py-5 text-center img-gradient">
                    <div class="jumbotron-text">
                        <h2>CHECKOUT YOUR TICKET</h2>
                    </div>
                </div>
            </div>
        </jumbotron>
        <!-- =============Jumbotron============= -->

        <!-- =============Checkout============= -->
        <div class="outer-container">

            <!-- Ticket Details Heading -->
            <div class="container mb-3">
                <div class="details-heading">
                    <h1 class="heading">Ticket Details</h1>
                </div>
            </div>

            <div class="container py-5 pl-2">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="col-12">
                            <img src="<%= poster_url %>" class="movie-image">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="col-md-10 pb-1">
                            <h2 id="movie-title">
                                <%= movie_title %>
                            </h2>
                        </div>
                        <div class="col-md-9 py-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white"
                                class="bi bi-geo-alt-fill" viewBox="0 0 18 18">
                                <path
                                    d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                            </svg>
                            <span class="description-text">
                                <%= location %>
                            </span>
                        </div>
                        <div class="col-md-9 py-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white"
                                class="bi bi-calendar3" viewBox="0 0 18 18">
                                <path
                                    d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z" />
                                <path
                                    d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                            </svg>
                            <span class="description-text">
                                <%= date %>
                            </span>
                        </div>
                        <div class="col-md-9 py-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white"
                                class="bi bi-clock-fill" viewBox="0 0 18 18">
                                <path
                                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                            </svg>
                            <span class="description-text">
                                <%= showtime %>
                            </span>
                        </div>
                        <div class="col-md-9 py-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white"
                                class="bi bi-ticket-perforated-fill" viewBox="0 0 18 18">
                                <path
                                    d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6V4.5Zm4-1v1h1v-1H4Zm1 3v-1H4v1h1Zm7 0v-1h-1v1h1Zm-1-2h1v-1h-1v1Zm-6 3H4v1h1v-1Zm7 1v-1h-1v1h1Zm-7 1H4v1h1v-1Zm7 1v-1h-1v1h1Zm-8 1v1h1v-1H4Zm7 1h1v-1h-1v1Z" />
                            </svg>
                            <span class="description-text">
                                <%= ticketSelected %> Tickets : <% for(var i=0; i<seatSelected.length; i++) { %>
                                        <% if(i==seatSelected.length-1) { %>
                                            <%= seatSelected[i] %>
                                                <% } else { %>
                                                    <%= seatSelected[i] %>,
                                                        <% } %>
                                                            <% } %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Price -->
            <div class="container">
                <div class="details-heading">
                    <h1 class="heading">PRICE</h1>
                </div>
            </div>

            <div class="container">
                <div class="price-details-box">
                    <div class="row inner-price-details">
                        <div class="col-6 py-3">
                            <span class="price-details-h2">Price details</span>
                        </div>
                        <div class="col-6 py-3 text-end">

                        </div>
                        <div class="col-6 py-3">
                            <span class="price-details-text">
                                <%= ticketSelected %> Tickets
                            </span>
                        </div>
                        <div class="col-6 py-3 text-end">
                            <span class="price-details-value">Rp <%= price %></span>
                        </div>
                        <div class="col-6 py-3">
                            <span class="price-details-text">Tax (10%)</span>
                        </div>
                        <div class="col-6 py-3 text-end">
                            <span class="price-details-value">Rp <%= tax %></span>
                        </div>
                    </div>

                    <!-- Total Section -->
                    <div class="row mt-2 total-section">
                        <div class="col-6 py-3">
                            <span class="price-details-text">Total</span>
                        </div>
                        <div class="col-6 py-3 text-end">
                            <span class="price-details-value">Rp <%= totalWithTax %></span>
                        </div>
                    </div>

                    <!-- Blank Space -->
                    <div class="blank">

                    </div>

                    <!-- Balance and button -->
                    <div class="container">
                        <div class="row balance-section">
                            <div class="col-6" style="padding:0 !important">
                                <div class="col-12">
                                    <span class="balance-text">Your Balance</span>
                                </div>
                                <div class="col-12">
                                    <span class="balance-value">Rp <%= balance %></span>
                                </div>
                            </div>
                            <div class="col-6" style="padding:0 !important">
                                <div class="col-12 text-end">
                                    <button type="submit" name="button" value="pay" class="btn-pay">Pay Now</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Blank Space -->
                    <div class="blank2">

                    </div>
                </div>
            </div>
        </div>
        <!-- =============Checkout============= -->
        <!-- ============ Footer ============ -->
        <div class="footer">
            <div class="container">
                <footer class="d-flex flex-wrap justify-content-between align-items-center py-5">
                    <div class="col-md-4 d-flex align-items-center">
                        <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                            <svg class="bi" width="30" height="24">
                                <use xlink:href="#bootstrap"></use>
                            </svg>
                        </a>
                        <span class="mb-3 mb-md-0 ">Â© 2023 Sea Movie, Inc</span>
                    </div>

                    <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
